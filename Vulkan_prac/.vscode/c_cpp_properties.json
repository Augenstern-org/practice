{
    // 示例配置：将 compilerPath 和 windowsSdkVersion 替换为你的环境路径
    "configurations": [
        {
            "name": "Win64-Vulkan",
            "includePath": [
                "${workspaceFolder}/**",
                "${env:VULKAN_SDK}/Include"
            ],
            "defines": [
                "VK_USE_PLATFORM_WIN32_KHR",
                "_WIN32",
                "_WINDOWS"
            ],
            // 把下面的路径替换为你本机的编译器（MSVC 或 MinGW/gcc/clang）
            "compilerPath": "C:/msys64/ucrt64/bin/g++.exe",
            "cStandard": "c11",
            "cppStandard": "c++17",
            // 根据你使用的编译器选择 intelliSense 模式：msvc-x64 / gcc-x64 / clang-x64
            "intelliSenseMode": "gcc-x64",
            // 可选：如果需要指定 Windows SDK 版本，请替换为正确版本号
            "windowsSdkVersion": "10.0.19041.0",
            "browse": {
                "path": [
                    "${workspaceFolder}",
                    "${env:VULKAN_SDK}/Include"
                ],
                "limitSymbolsToIncludedHeaders": true,
                "databaseFilename": ""
            }
        }
    ],
    "version": 4
}