{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "cpp build",
            "type": "shell",
            "command": "g++",
            "args": [
                "-std=c++20",
                "${fileBasename}",
                "-g",
                "-Wall",
                "-o",
                "${fileBasenameNoExtension}.exe"
            ],
            "group": "build",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$gcc"
        }
    ]
}